<AnchorPane fx:id="anchorPane" minHeight="400.0" minWidth="600.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controledecomandas.controllers.InsertUserController">
   <children>
      <BorderPane fx:id="borderPane" layoutX="10.0" layoutY="10.0" minHeight="0.0" minWidth="400.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F2EFEB;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
               <menus>
                  <Menu mnemonicParsing="false" text="File">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Edit">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
         </top>
         <padding>
            <Insets bottom="10.0" />
         </padding>
         <center>
            <GridPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Nome" />
                        <TextField fx:id="inputUserFirstName" stylesheets="@../css/global.css">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
                     <children>
                        <Label text="Email" />
                        <TextField fx:id="inputUserEmail" stylesheets="@../css/global.css">
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
                     <children>
                        <Label text="CEP" />
                        <TextField fx:id="inputUserZipcode" stylesheets="@../css/global.css">
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                     <children>
                        <Label text="Sobrenome" />
                        <TextField fx:id="inputUserLastName" stylesheets="@../css/global.css">
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="Telefone" />
                        <TextField fx:id="inputUserTelephone" stylesheets="@../css/global.css">
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <Label text="Endereço" />
                        <TextField fx:id="inputUserAddress" stylesheets="@../css/global.css">
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="3">
                     <children>
                        <Label text="Salário" />
                        <TextField fx:id="inputUserSalary" stylesheets="@../css/global.css">
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="4">
                     <children>
                        <Label text="Senha" />
                        <TextField fx:id="inputUserPassword" stylesheets="@../css/global.css">
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                     <children>
                        <Label text="Confirme sua Senha" />
                        <TextField fx:id="inputUserCPassword" stylesheets="@../css/global.css">
                           <styleClass>
                              <String fx:value="mt-4" />
                              <String fx:value="input" />
                           </styleClass>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                     <children>
                        <Button mnemonicParsing="false" onAction="#registerUser" stylesheets="@../css/global.css" text="Enviar" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="5">
                     <children>
                        <Button mnemonicParsing="false" stylesheets="@../css/global.css" text="Voltar" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <children>
                        <Label text="Acesso:">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <RadioButton fx:id="radioBtnWorker" mnemonicParsing="false" selected="true" text="Funcionário">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                           <toggleGroup>
                              <ToggleGroup fx:id="access" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioBtnAdmin" mnemonicParsing="false" text="Gerente" toggleGroup="$access" />
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
